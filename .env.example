# VintedScanner Web - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION SETTINGS
# ============================================
DEPLOYMENT_MODE=self-hosted
DEBUG=False

# ============================================
# DATABASE
# ============================================
# Self-hosted (SQLite) - Default:
# DATABASE_URL=sqlite:///./backend/data/vinted.db

# Cloud (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/vintedscanner

# ============================================
# AUTHENTICATION
# ============================================
# Require login for all operations
# Self-hosted: false (auto-login, single user)
# SaaS/Cloud: true (multi-user with login required)
REQUIRE_AUTH=false

# JWT Secret - Generate with: openssl rand -hex 32
JWT_SECRET=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# DEFAULT ADMIN USER (First Run Only)
# ============================================
# These credentials are used to create the initial admin user
# CHANGE THESE IMMEDIATELY after first login!
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin

# ============================================
# CORS (Frontend URLs)
# ============================================
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ============================================
# TELEGRAM NOTIFICATIONS (Optional)
# ============================================
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# ============================================
# VINTED API SETTINGS
# ============================================
VINTED_API_TIMEOUT=30
