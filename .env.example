# VintedScanner Web - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION SETTINGS
# ============================================
DEPLOYMENT_MODE=self-hosted
DEBUG=False

# ============================================
# DATABASE
# ============================================
# Self-hosted (SQLite):
DATABASE_URL=sqlite:///./data/vinted.db

# Cloud (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/vintedscanner

# ============================================
# AUTHENTICATION
# ============================================
# Generate a secure secret key: openssl rand -hex 32
JWT_SECRET=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS (Frontend URLs)
# ============================================
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ============================================
# TELEGRAM NOTIFICATIONS (Optional)
# ============================================
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# ============================================
# BRAND/CATEGORY CACHE SETTINGS
# ============================================
BRAND_CACHE_TTL_DAYS=30
SEED_POPULAR_BRANDS_ON_STARTUP=true
VINTED_API_TIMEOUT=30
MAX_BRAND_SEARCH_RESULTS=50
CATEGORY_CACHE_REFRESH_DAYS=7

# ============================================
# SCANNER SETTINGS
# ============================================
MIN_CHECK_INTERVAL_MINUTES=5
MAX_CHECK_INTERVAL_MINUTES=1440
